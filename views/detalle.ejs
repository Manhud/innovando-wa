<div class="row mb-4">
  <div class="col-md-8">
    <h1 class="mb-3">
      <i class="bi bi-box-seam me-2"></i>
      Detalle del Pedido
    </h1>
  </div>
  <div class="col-md-4 text-md-end">
    <a href="/" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i>
      Volver a la lista
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Información del Pedido</h5>
        <span class="badge rounded-pill 
          <%= pedido.estado === 'pendiente' ? 'bg-warning' : 
             pedido.estado === 'confirmado' ? 'bg-primary' : 
             pedido.estado === 'despachado' ? 'bg-info' : 
             pedido.estado === 'entregado' ? 'bg-success' : 
             'bg-danger' %>">
          <%= pedido.estado.charAt(0).toUpperCase() + pedido.estado.slice(1) %>
        </span>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-4 fw-bold">ID:</div>
          <div class="col-md-8"><%= pedido._id %></div>
        </div>
        <div class="row mb-3">
          <div class="col-md-4 fw-bold">Teléfono:</div>
          <div class="col-md-8"><%= pedido.telefono %></div>
        </div>
        <div class="row mb-3">
          <div class="col-md-4 fw-bold">Nombre:</div>
          <div class="col-md-8"><%= pedido.nombre || '-' %></div>
        </div>
        <div class="row mb-3">
          <div class="col-md-4 fw-bold">Dirección:</div>
          <div class="col-md-8"><%= pedido.direccion || '-' %></div>
        </div>
        <div class="row mb-3">
          <div class="col-md-4 fw-bold">Fecha de creación:</div>
          <div class="col-md-8"><%= new Date(pedido.fechaCreacion).toLocaleString() %></div>
        </div>
        <div class="row mb-3">
          <div class="col-md-4 fw-bold">Última actualización:</div>
          <div class="col-md-8"><%= new Date(pedido.fechaActualizacion).toLocaleString() %></div>
        </div>
        <div class="row mb-3">
          <div class="col-md-4 fw-bold">Notas:</div>
          <div class="col-md-8"><%= pedido.notas || '-' %></div>
        </div>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Productos</h5>
      </div>
      <div class="card-body">
        <% if (pedido.productos && pedido.productos.length > 0) { %>
          <ul class="list-group">
            <% pedido.productos.forEach(producto => { %>
              <li class="list-group-item"><%= producto %></li>
            <% }); %>
          </ul>
        <% } else { %>
          <div class="alert alert-info">
            No hay productos registrados para este pedido.
          </div>
        <% } %>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Actualizar Estado</h5>
      </div>
      <div class="card-body">
        <form action="/pedidos/<%= pedido._id %>/actualizar" method="POST">
          <div class="mb-3">
            <label for="estado" class="form-label">Estado del pedido</label>
            <select class="form-select" id="estado" name="estado" required>
              <option value="pendiente" <%= pedido.estado === 'pendiente' ? 'selected' : '' %>>Pendiente</option>
              <option value="confirmado" <%= pedido.estado === 'confirmado' ? 'selected' : '' %>>Confirmado</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="notas" class="form-label">Notas adicionales</label>
            <textarea class="form-control" id="notas" name="notas" rows="3"><%= pedido.notas || '' %></textarea>
          </div>
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-save me-1"></i>
            Guardar Cambios
          </button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-7">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Historial de Mensajes</h5>
        <a href="https://wa.me/<%= pedido.telefono.replace('+', '') %>" target="_blank" class="btn btn-sm btn-success">
          <i class="bi bi-whatsapp me-1"></i>
          Contactar
        </a>
      </div>
      <div class="card-body p-0">
        <% if (pedido.mensajes && pedido.mensajes.length > 0) { %>
          <div class="chat-container p-3" style="max-height: 500px; overflow-y: auto;">
            <% pedido.mensajes.sort((a, b) => new Date(a.timestamp) - new Date(b.timestamp)).forEach(mensaje => { %>
              <div class="message-container mb-3 <%= mensaje.tipo === 'recibido' ? 'text-start' : (mensaje.tipo === 'enviado' ? 'text-end' : 'text-center') %>">
                <div class="message-bubble p-2 rounded 
                  <%= mensaje.tipo === 'recibido' ? 'bg-light text-dark' : 
                     mensaje.tipo === 'enviado' ? 'bg-primary text-white' : 
                     'bg-secondary text-white small' %> 
                  d-inline-block" style="max-width: 80%;">
                  <%= mensaje.contenido %>
                  <div class="message-time small <%= mensaje.tipo === 'enviado' ? 'text-white-50' : 'text-muted' %> mt-1">
                    <%= new Date(mensaje.timestamp).toLocaleString() %>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="alert alert-info m-3">
            No hay mensajes registrados para este pedido.
          </div>
        <% } %>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Acciones Rápidas</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <a href="https://wa.me/<%= pedido.telefono.replace('+', '') %>" target="_blank" class="btn btn-success">
            <i class="bi bi-whatsapp me-1"></i>
            Contactar por WhatsApp
          </a>
          <button class="btn btn-outline-primary" onclick="navigator.clipboard.writeText('<%= pedido._id %>')">
            <i class="bi bi-clipboard me-1"></i>
            Copiar ID
          </button>
          <% if (pedido.estado === 'pendiente') { %>
            <form action="/pedidos/<%= pedido._id %>/actualizar" method="POST">
              <input type="hidden" name="estado" value="confirmado">
              <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-check-circle me-1"></i>
                Marcar como Confirmado
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div> 