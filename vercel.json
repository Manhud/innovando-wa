{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "/api/webhook.js"
    },
    {
      "src": "/api/button-response",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "/api/button-response.js"
    },
    {
      "src": "/api/get-orders",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/get-orders.js"
    },
    {
      "src": "/api/get-order",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/get-order.js"
    },
    {
      "src": "/api/delete-order",
      "methods": ["DELETE", "OPTIONS"],
      "dest": "/api/delete-order.js"
    },
    {
      "src": "/api/orders",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/get-orders.js"
    },
    {
      "src": "/api/orders/(.*)",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/get-order.js?orderId=$1"
    },
    {
      "src": "/orders",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/orders.js"
    },
    {
      "src": "/(.+\\.[a-z]+)$",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 